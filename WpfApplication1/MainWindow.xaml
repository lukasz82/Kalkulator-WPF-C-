        <Button Content="+" Height="36" HorizontalAlignment="Left" Margin="41,179,0,0" Name="Dodaj" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="Dodaj_Click"/>
        <Button Content="-" Height="36" HorizontalAlignment="Left" Margin="83,179,0,0" Name="Odejmij" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="Odejmij_Click" />
        <Button Content="=" Height="36" HorizontalAlignment="Left" Margin="126,179,0,0" Name="RownaSie" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="RownaSie_Click"/>
        <Button Content="C" Height="36" HorizontalAlignment="Left" Margin="125,53,0,0" Name="Wyczysc" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="Wyczysc_Click"/>
        <Button Content="4" Height="36" HorizontalAlignment="Left" Name="Cztery" VerticalAlignment="Top" Width="36" Grid.Column="1" Margin="0,95,0,0" Click="AktualizujDane" />
        <Button Content="5" Height="36" HorizontalAlignment="Left" Margin="42,95,0,0" Name="Piec" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="AktualizujDane" />
        <Button Content="6" Height="36" HorizontalAlignment="Left" Margin="84,95,0,0" Name="Szesc" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="AktualizujDane" />
        <Button Content="7" Height="36" HorizontalAlignment="Left" Margin="0,137,0,0" Name="Siedem" VerticalAlignment="Top" Width="36" Grid.Column="1" Grid.RowSpan="2" Click="AktualizujDane" />
        <Button Content="8" Height="36" HorizontalAlignment="Left" Margin="42,137,0,0" Name="Osiem" VerticalAlignment="Top" Width="36" Grid.Column="1" Grid.RowSpan="2" Click="AktualizujDane" />
