        <Button Content="0" Height="36" HorizontalAlignment="Left" Margin="0,179,0,0" Name="Zero" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="AktualizujDane" />
        <ListBox Grid.Column="1" Grid.Row="1" Height="54" HorizontalAlignment="Left" Name="listBox1" VerticalAlignment="Top" Width="162" SelectionChanged="listBox1_SelectionChanged" Margin="0,54,0,0" />
        <Button Content="Sprawdz" Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="3,114,0,0" Name="Sprawdzam" VerticalAlignment="Top" Width="75" Grid.Row="1" />
        <Button Content="." Grid.Column="1" Height="36" HorizontalAlignment="Left" Margin="125,137,0,0" Name="Przecinek" VerticalAlignment="Top" Width="37" Click="Przecinek_Click" />
        <Button Content="/" Height="36" HorizontalAlignment="Left" Margin="83,221,0,0" Name="Dziel" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="Dziel_Click" Grid.RowSpan="2" />
        <Button Content="*" Height="36" HorizontalAlignment="Left" Margin="41,221,0,0" Name="Mnoz" VerticalAlignment="Top" Width="36" Grid.Column="1" Click="Mnoz_Click_1" Grid.RowSpan="2" />
