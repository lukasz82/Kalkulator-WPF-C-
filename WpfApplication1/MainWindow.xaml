            <RowDefinition Height="237*" />
        </Grid.RowDefinitions>
        <TextBox Height="35" HorizontalAlignment="Left" Margin="12,12,0,0" Name="Wynik" VerticalAlignment="Top" Width="164" TextChanged="textBox1_TextChanged" DataContext="{Binding}" Grid.ColumnSpan="2" />
